{
  "manifest_version": 3,
  "name": "Google Drive Tree Expander",
  "version": "1.0.0",
  "description": "Automatically expands the Google Drive sidebar tree to match the current folder path shown in the breadcrumbs.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://drive.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
